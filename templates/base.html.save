



<!doctype html>
<html data-theme="dark">
<head>
  <meta charset="utf-8">
  <title>{% block title %}Oracle{% endblock %}</title>

  <style>
    :root { --bg:#000; --fg:#fff; --muted:#9aa0a6; --card:#0a0a0a; --border:#222; }
    [data-theme="light"] { --bg:#fff; --fg:#000; --muted:#444; --card:#f6f6f6; --border:#ddd; }
    html,body{height:100%}
    body{margin:0;background:var(--bg);color:var(--fg);font-family:system-ui, sans-serif}
    .wrap{max-width:1080px;margin:0 auto;padding:24px}
    .row{display:grid;gap:24px;grid-template-columns:repeat(auto-fit,minmax(220px,1fr))}
    .card{background:var(--card);border:1px solid var(--border);border-radius:14px;padding:16px}
    .specimen-img{display:block;max-width:280px;max-height:320px;width:auto;height:auto;margin:0 auto}
    .muted{color:var(--muted)}
    .topbar{display:flex;justify-content:space-between;align-items:center;margin:12px 0 18px}
    .btn{padding:8px 12px;border-radius:12px;background:transparent;color:var(--fg);border:1px solid var(--border);cursor:pointer}
    a{color:inherit;text-decoration:none}
    a.btn:hover{outline:1px solid var(--border)}
    .searchbar{margin: 14px auto 6px; max-width: 640px; text-align: center;}
    .searchbar input{width:100%; padding:10px 12px; border:1px solid var(--border); border-radius:8px; background:var(--card); color:var(--fg)}
  </style>

  <script>
    (function(){
      const saved = localStorage.getItem("oracle-theme") || "dark";
      document.documentElement.setAttribute("data-theme", saved);
      window.toggleTheme = function(){
        const cur = document.documentElement.getAttribute("data-theme");
        const next = cur === "dark" ? "light" : "dark";
        document.documentElement.setAttribute("data-theme", next);
        localStorage.setItem("oracle-theme", next);
      };
    })();
  </script>
</head>
<body>
  <div class="wrap">
    <!-- GLOBAL SEARCH (keep it on every page; move to specimens.html later if you want it only there) -->
    <div class="searchbar">
      <input type="text" placeholder="Search specimensâ€¦">
    </div>

    <!-- TOP NAV -->
    <div class="topbar">
      <div><a href="/" style="font-weight:700">Oracle</a></div>
      <nav style="display:flex; gap:14px; align-items:center">
        <a class="btn" href="/">Scan</a>
        <a class="btn" href="/specimens">Library</a>
        <button class="btn" onclick="toggleTheme()">Toggle Theme</button>
      </nav>
    </div>

    {% block content %}{% endblock %}
  </div>
</body>
</html>

